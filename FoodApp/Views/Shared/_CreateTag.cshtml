@model FoodApp.Models.Tag


 <!-- CREATE TAG SECTION -->
<div ng-if="showTagCreateForm" class="form-horizontal new-tag-section">
    <hr />
    @using (Html.BeginForm("TestAddTag", "Recipes"))
            {
        @Html.AntiForgeryToken() {
            <div class="form-group">
                <div class="col-md-10 col-md-offset-2 create-new-tag">
                    Create new Tag
                </div>
                @Html.LabelFor(model => model, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Tag name...." } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-10 col-md-offset-2 mt10">
                    <button type="submit" class="btn btn-success">Create Tag</button>
                </div>
            </div>
        }
    }
    <hr />
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
