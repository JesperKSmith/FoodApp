@model IEnumerable<FoodApp.Models.Recipe>

@{
    ViewBag.Title = "Index";
}

<h2>Recipes</h2>

<p>
    @Html.ActionLink("Create new recipe", "Create")
</p>


<div class="recipe-card-container">
    @foreach (var item in Model)
    {
        <div>
            <a href="@Url.Action("Details", "Recipes", new { id = item.Id })">
                <div class="recipe-card">
                    <img src="@Url.Content(item.Picture)" alt="Image" />
                    <div class="recipe-card-text">
                        <h4><b>@Html.DisplayFor(modelItem => item.Title)</b></h4>
                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        @foreach (var tag in item.Tags)
                {
                            @Html.ActionLink(tag.Name, "ListByTag", "Recipes", tag, new { @class = "w3-button w3-round-large w3-amber w3-hover-indigo" })
                        }
                    </div>
                </div>
            </a>
        </div>
    }
</div>
