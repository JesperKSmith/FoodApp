@model FoodApp.Models.Recipe



<h3>@Model.Title</h3>

<div>
    <div class="flex">
        <h4>Recipe by: </h4>
        <span class="recipe-author">@Model.Author</span>
    </div>
    <hr />
    <dl class="dl-horizontal recipe-details">
       <div class="recipe-details-row">
           <dt>
               @Html.DisplayNameFor(model => model.Title)
           </dt>

           <dd>
               @Html.DisplayFor(model => model.Title)
           </dd>
       </div>
        <div class="recipe-details-row">
            <dt>
                @Html.DisplayNameFor(model => model.Picture)
            </dt>

            <dd>
                <img src="@Url.Content(Model.Picture)" style="max-width:400px; border: solid 1px rgba(3, 169, 244, 0.22);" alt="Image" />
            </dd>
        </div>
            
        <div class="recipe-details-row">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        </div>

        <div class="recipe-details-row">
            <dt>
                @Html.DisplayNameFor(model => model.Ingredients)
            </dt>

            <dd class="recipe-ingridients">
                @Html.DisplayFor(model => model.Ingredients)
            </dd>
        </div>

        <div class="recipe-details-row">
            <dt>
                @Html.DisplayNameFor(model => model.Directions)
            </dt>

            <dd class="recipe-ingridients">
                @Html.DisplayFor(model => model.Directions)
            </dd>
        </div>
            
        <div class="recipe-details-row">
            <dt>
                @Html.DisplayNameFor(model => model.Tags)
            </dt>

            <dd>
                @{
                    if (Model.Tags != null && Model.Tags.Count>0)
                    {

                        var lastTag = Model.Tags.Last();

                        foreach (var tag in Model.Tags)
                        {
                            if (tag.Equals(lastTag))
                            { <span>@tag.Name</span>}
                            else
                            { <span>@tag.Name, </span> }

                        }
                    }
                }
            </dd>
        </div>
            

</dl>
</div>
<p> 

    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
    @if (Request.IsAuthenticated && Model.Author == User.Identity.Name)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-success ml10" })
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger ml5" })
    }
</p>
